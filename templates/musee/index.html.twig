{% extends 'base.html.twig' %}

{% block title %}Musées Célèbres
{% endblock %}

{% block body %}

	<div class="container my-2 col-11">
		<h1>Les musées célèbres du monde:</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Nom</th>
					<th>Adresse</th>
					<th>Entrée</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for musee in musees %}
					<tr>
						<td>{{ musee.nom }}</td>
						<td>{{ musee.adresse }}</td>
						<td>{{ musee.prix }}</td>
						<td>
							<div class="container-boutons d-flex">
								<a class="btn btn-outline-primary me-2" href="{{ path('musee_show', {'id': musee.id}) }}">Details</a>
								<a class="btn btn-outline-warning mx-2" href="{{ path('musee_edit', {'id': musee.id}) }}">Modifier</a>
								<div class="mx-2">{{ include('musee/_delete_form.html.twig') }}</div>
							</div>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="7">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a class="btn btn-outline-success" href="{{ path('musee_new') }}">Create new</a>
	</div>
{% endblock %}
